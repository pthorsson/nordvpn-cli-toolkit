{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018"],
    "noImplicitAny": true,
    "sourceMap": false,
    "outDir": ".build",
    "baseUrl": "./src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["src/**/*", "typings/**/*"]
}